<div class="study-container">
    <h1>Study Mode: {{deck.title}}</h1>

    <div class="study-content">
        <br>

        <div class="button-row">
            <form action='/decks/{{deck.id}}/cards/add' method="POST">
            <button type="submit" id="new-card" class="btn">New Card</button>
            </form>

            <form action='/cards/delete/{{card.id}}' method="POST">
            <button type="submit" id="new-card" class="btn btn-delete">Delete Card</button>
            </form>

            <form action='/cards/save/{{card.id}}' method="POST">
            <button id="save-card" class="btn btn-primary">Save Card</button>
        </div>

        <div class="flashcard flashcard-edit">
            <div class="form-group">
                <label for="question" class="form-label">Question</label>
                <textarea type="text" id="question" name="question" class="form-input" required>{{{ card.question }}}</textarea>
            </div>
        </div>

        <div class="flashcard flashcard-edit">
            <div class="form-group">
                <label for="answer" class="form-label">Answer</label>
                <textarea type="text" id="answer" name="answer" class="form-input" required>{{{ card.answer }}}</textarea>
            </div>
        </div>
        </form>

        <div class="button-row">
            {{#if prevCardId}}
            <a href="/decks/edit/{{deck.id}}/card/{{prevCardId}}" class="btn">Previous</a>
            {{else}}
            <button class="btn" disabled="true">Previous</button>
            {{/if }}

            {{#if nextCardId }}
            <a href="/decks/edit/{{deck.id}}/card/{{nextCardId}}" class="btn">Next</a>
            {{else}}
            <button class="btn" disabled="true">Next</button>
            {{/if }}
            
        </div>
        
    </div>
</div>

<script>
    // Embed cards data into the page
    const cards = {{{ json cards }}};
</script>
